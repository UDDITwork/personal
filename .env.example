# LlamaCloud API Key (get from https://cloud.llamaindex.ai)
LLAMA_CLOUD_API_KEY=llx-xxxxxxxxxxxxx

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=xxxxxxxxxxxxxxx

# Redis URL for Celery broker
REDIS_URL=redis://localhost:6379/0

# Concurrency Settings
MAX_CONCURRENT_EXTRACTIONS=50

# Processing Timeouts (seconds)
EXTRACTION_TIMEOUT=300
DIAGRAM_DESCRIPTION_TIMEOUT=60

# Environment
ENVIRONMENT=development

# Turso Cloud Database (NO local SQLite files)
TURSO_DATABASE_URL=https://your-database-name.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_key_here_min_32_characters_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cloudinary Cloud Storage (NO local disk storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
